{% extends 'base.html.twig' %}

{% block title %}Show index{% endblock %}

{% block body %}
    <h1>Show index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Illustration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.titre }}</td>
                <td>{{ show.description }}</td>
                <td>{{ show.illustration }}</td>

                <td> <a href="{{ path('show_show', {'id': show.id}) }}">show</a></td>
                    {% if is_granted("ROLE_ADMIN") %}
                <td><a href="{{ path('show_edit', {'id': show.id}) }}">edit</a></td>
                    {%endif%}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('show_new') }}">Create new</a>
    {%endif%}

{% endblock %}
